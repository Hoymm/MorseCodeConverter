<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_activated="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/buttonsShadowColor" />
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        />
                    <padding
                        android:bottom="@dimen/shadowSize"
                        android:top="@dimen/shadowSize" />
                </shape>
            </item>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        />
                    <solid
                        android:color="@color/playPauseStopButtonsPressed"
                        />
                    <size
                        android:width="250dp"
                        android:height="80dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_activated="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/buttonsShadowColor" />
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        />
                    <padding
                        android:bottom="@dimen/shadowSize"
                        android:top="@dimen/shadowSize" />
                </shape>
            </item>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        />
                    <solid
                        android:color="@color/playPauseStopButtonsPressed"
                        />
                    <size
                        android:width="250dp"
                        android:height="80dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_activated="true" >
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/buttonsShadowColor" />
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        />
                    <padding
                        android:bottom="@dimen/shadowSize"
                        android:top="@dimen/shadowSize" />
                </shape>
            </item>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        />
                    <solid
                        android:color="@color/applicationTheme"
                        />
                    <size
                        android:width="250dp"
                        android:height="80dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/buttonsShadowColor" />
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        />
                    <padding
                        android:bottom="@dimen/shadowSize"
                        android:top="@dimen/shadowSize" />
                </shape>
            </item>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        />
                    <solid
                        android:color="@color/playPauseStopButtonsInactiveBackgroundColor"
                        />
                    <size
                        android:width="250dp"
                        android:height="80dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>