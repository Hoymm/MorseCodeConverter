<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/buttonsShadowColor" />
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="8dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="8dp"
                        />
                    <padding
                        android:left="@dimen/shadowSize"
                        android:top="@dimen/shadowSize"
                        android:right="@dimen/shadowSize"
                        android:bottom="@dimen/shadowSize"
                        />
                </shape>
            </item>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:topLeftRadius="0dp"
                        android:topRightRadius="8dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="8dp"
                        />
                    <solid
                        android:color="#FFFFFF"
                        />
                    <size
                        android:width="250dp"
                        android:height="80dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>