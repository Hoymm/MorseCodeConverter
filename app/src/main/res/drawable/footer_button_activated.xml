<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
            >
            <solid android:color="@color/footerButtonActive" />
            <stroke
                android:width="1dp"
                android:color="@color/footerButtonActiveStroke" />
        </shape>
    </item>

    <item android:height="4dp"
        android:left="7dp"
        android:right="7dp"
        android:bottom="4dp"
        android:gravity="bottom"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/footerButtonActiveUnderscore" />
        </shape>
    </item>
</layer-list>