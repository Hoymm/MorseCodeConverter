<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="appFontStyle">
        <item name="android:textColor">@color/textAppColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="playPauseStopButtons">
        <item name="android:textColor">#49427C</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">@dimen/playButtonSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="footerImageButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:background">@color/applicationTheme</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="morseKeyboardButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.19</item>
        <item name="android:padding">18dp</item>
        <item name="android:background">@color/morseKeyboardBackground</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
